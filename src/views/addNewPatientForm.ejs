<%- include('partials/header'); -%>
        <div id="content">

            <div class="container my-auto">
                <div class="row justify-content-center">
                    <div class="col-lg-8 col-sm-12">
    
                        <!-- Errors -->
                        <% if (error) { %>
                            <h5 class="alert alert-danger lead font-italic shadow-sm">Invalid data.</h5>
                        <% } %>
    
                        <!-- Input Form -->
    
                        <form action="/add-patient" method="POST" class="shadow-lg p-4 rounded-lg bg-white">
                            
                            <h2 class="border-bottom text-muted pb-3 mb-4">Add Patient</h2>
    
                            <!-- Input Name -->
    
                            <div class="form-group">
                                <label for="name">Name *</label>
                                <div class="input-group mb-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text"><i class='bx bxs-user'></i></div>
                                    </div>
                                    <input type="name" class="form-control" placeholder="Name" name="name">
                                </div>
                            </div>
                            
                            <!-- Input Email -->
    
                            <div class="form-group">
                                <label for="email">Email *</label>
                                <div class="input-group mb-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text"><i class='bx bxs-envelope'></i></div>
                                    </div>
                                    <input type="email" class="form-control" placeholder="Email" name="email">
                                </div>
                            
                            </div>
    
                            <!-- Input Phone Number -->
                            
                            <div class="form-group">
                                <label for="name">Phone Number *</label>
                                <div class="input-group mb-2">
                                    <div class="input-group-prepend">
                                        <div class="input-group-text"><i class='bx bxs-phone'></i></div>
                                    </div>
                                    <input type="text" class="form-control" placeholder="Phone Number" name="phone_number" required>
                                </div>
                            </div>
    
                            <div class="d-flex flex-row justify-content-center mt-5">
                                <button type="submit" class="btn btn-outline-primary">Submit</button>
                            </div>
    
                            <h6 class="text-muted italic font-weight-lighter font-italic">* Required fields</h6>
    
                        </form>
    
                    </div>     
                </div>
            </div>


        </div>
        


<%- include('partials/footer'); -%>