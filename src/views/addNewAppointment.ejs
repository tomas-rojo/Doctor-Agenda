<%- include('partials/header'); -%>

    <div id="content">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 col-sm-12">

                <!-- Errors -->
                <% if (error) { %>
                    <h5 class="alert alert-danger lead font-italic shadow-sm">Invalid data.</h5>
                <% } %>

                <!-- New Appointment Added -->
                <% if (success) { %>
                    <h5 class="alert alert-success lead font-italic shadow-sm"><i class='bx bx-check-circle'></i> New Appointment Added!</h5>
                <% } %>

                
                    <form action="/add-appointment" method="POST" class="shadow-lg p-4 rounded-lg bg-white">
                        <h2 class="border-bottom text-muted pb-3 mb-4">Add Appointment</h2>
                        <div class="form-group">
                            <label for="name">Name *</label>
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class='bx bxs-user'></i></div>
                                </div>
                                <input type="name" class="form-control" placeholder="Name" name="name" value="<%= patient.name %>" required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="email">Email *</label>
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class='bx bxs-envelope'></i></div>
                                </div>
                                <input type="text" class="form-control" placeholder="Email" name="email" value="<%= patient.email %>" required>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="email">Time *</label>
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class='bx bx-calendar'></i></div>
                                </div>
                                <input type="text" class="form-control" name="datetime" required>
                            </div>
                        </div>                            

                        
                        <div class="d-flex flex-row justify-content-center mt-5">
                            <button type="submit" class="btn btn-outline-primary">Submit</button>
                        </div>

                        <h6 class="text-muted italic font-weight-lighter font-italic">* Required fields</h6>
                        
                </div>

                </form>

            </div>

        </div>
    </div>

<%- include('partials/footer'); -%>